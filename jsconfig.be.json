{
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./backend",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "outDir": "./build",
    "resolveJsonModule": true
  },
  "include": [
    "backend",
    "backend/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}