{
  "$schema": "https://json.schemastore.org/nodemon.json",
  "verbose": true,
  "ignore": [
    "node_modules",
    "tests",
    "app",
    "*.s.js"
  ],
  "watch": [
    "./**/*.js",
    "./**/*.json"
  ],
  "ext": "js json",
  "exec": "tsx --tsconfig ./jsconfig.json ./index.js",
  "signal": "SIGINT",
  "delay": 2500
}