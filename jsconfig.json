{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "references": [
    {
      "path": "./jsconfig.be.json"
    },
    {
      "path": "./jsconfig.dev-tool.json"
    }
  ],
  "compilerOptions": {
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}